
@{
    ViewBag.Title = "Index";
}
<h1>
    Body Calculator
</h1>
<form action="Calculate/Calculate" method="post">
    <div class="form-group">
        <label for="weight">Weight</label>
        <input type="text" name="value1" class="form-control" id="weight" />
    </div>
    <div class="form-group">
        <label for="height">Height</label>
        <input type="text" name="value2" class="form-control" id="height" />
    </div>
    <div class="form-group">
        <input type="radio" name="gender" value="male" />Man<br />
        <input type="radio" name="gender" value="female" />Women<br />
    </div>
    <div class="form-group">
        <input type="submit" value="Calculate" class="btn btn-default" />
    </div>
</form>
